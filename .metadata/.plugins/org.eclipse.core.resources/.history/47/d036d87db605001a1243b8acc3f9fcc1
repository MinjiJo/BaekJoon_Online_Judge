<%
	String cookie = request.getHeader("Cookie");
	
	if(cookie!=null){
	//쿠키들을 배열로 가져옵니다
	Cookie cookies[] = request.getCookies();
	
	//쿠키 배열에서 쿠키 이름이 "name"인 것을 찾아서 쿠키의 이름과 값을 가져옵니다.
	for(int i=0;i<cookies.length;i++){
		if(cookies[i].getName().equals("language")){
			if(cookies[i].getValue() == "korea"){
				out.print("<h1>한국어 페이지 입니다.</h1>");
			}else if(cookies[i].getValue() == "english"){
				out.print("<h1>영어 페이지 입니다.</h1>");
			}
			
		}
	}//for end
	%>
	<%
	} else {
	%>
		out.print("<h1>한국어 페이지 입니다.</h1>");
	<%
	}
	%>

<form action="cookieExample2.jsp" method="post">
	<fieldset>
		<input type="radio" name="language" value="korea"
			   id="korea">한국어 페이지 보기
				
		<input type="radio" name="language" value="english"
			   id="english">영어 페이지 보기
				
		<input type="submit" value="설정">
	</fieldset>
</form>
