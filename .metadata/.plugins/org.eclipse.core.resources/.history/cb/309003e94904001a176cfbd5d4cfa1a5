<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="EUC-KR">
		<link href="login.css" rel="stylesheet" type="text/css">
		<title>LOGIN</title>
	</head>
	<body>
		
		<form action="login_ok" method="post" onSubmit="return check()">
			아이디 : <input type="text" name="id"
						 placeholder="Enter id" required><br>
			비밀번호: <input type="password" name="passwd"
						 placeholder="Enter password" required><br>
			<input type="submit" value="전송"><input type="reset" value="취소">
		</form>
		<script>
			<%String id = application.getInitParameter("id");
			  String pass = application.getInitParameter("password");
			 %>
			 function check(){
				 var id = document.getElementByName("id").val();
				 var pass = document.getElementByName("passwd").val();
				 System.out.println(id + " " + pass);
				 if ( id.equals(<%=id%>) && pass.equals(<%=pass%>) ){
					alert("아이디가 일치하지 않습니다.");
					return false;
				 } else if (!id.equals(<%=id%>)) {
					alert("패스워드가 일치하지 않습니다.");
					return false;
				 } else if (!pass.equals(<%=pass%>)){
					return true;
				 }
			 }
		</script>
	</body>
</html>