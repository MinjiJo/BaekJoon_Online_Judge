package homework;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/ch3/homework/MyformServlet")
public class MyformServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

    public MyformServlet() {
        super();
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html;charset=euc-kr");
		PrintWriter out = response.getWriter();
		String id = request.getParameter("id");
		String pass = request.getParameter("pass");
		String jumin1 = request.getParameter("jumin1");
		String jumin2 = request.getParameter("jumin2");
		String email = request.getParameter("email");
		String domain = request.getParameter("domain");
		String gender = request.getParameter("gender");
		String[] hobby = request.getParameterValues("hobby");
		String post1 = request.getParameter("post1");
		String address = request.getParameter("address");
		String intro = request.getParameter("intro");
		out.println("<html><head><style>");
		out.print("body{background:black;}");
		out.print("table{border: 1px solid black; background:yellow; margin:0 auto}");
		out.print("td{font-size: 20px; text-align: center;}");
		out.print("</style></head>");
		out.print("<body><table>");
		out.print("<tr><td>");
		out.print("ID");
		out.print("</td><td>");
		out.print(id);
		out.print("</td></tr><tr><td>");
		out.print("Password");
		out.print("</td>");
		out.print("<td>");
		out.print(pass);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("주민번호");
		out.print("</td>");
		out.print("<td>");
		out.print(jumin1 + "-" + jumin2);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("E-mail");
		out.print("</td>");
		out.print("<td>");
		out.print(email + "@" + domain);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("Gender");
		out.print("</td>");
		out.print("<td>");
		if(gender == "m") {
			out.print("남성");
		} else {
			out.print("여성");
		}
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("Hobby");
		out.print("</td>");
		out.print("<td>");
		out.print(hobby);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("우편번호");
		out.print("</td>");
		out.print("<td>");
		out.print(post1);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("Address");
		out.print("</td>");
		out.print("<td>");
		out.print(address);
		out.print("</td>");
		out.print("</tr>");
		out.print("<tr>");
		out.print("<td>");
		out.print("자기소개");
		out.print("</td>");
		out.print("<td>");
		out.print(intro);
		out.print("</td>");
		out.print("</table></body></html>");
		out.close();
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}
