package sort;

public class BubbleSort {
	public static void main(String[] args) {
		
	}
	
	//a[idx1]과 a[idx2]의 값을 바꿉니다.
	static void swap(int[] a, int idx1, int idx2) {
		int t = a[idx1];
		a[idx1] = a[idx2];
		a[idx2] = t;

	}
	
	//버블 정렬
	static void buubleSort(int[] a, int n) {
		for(int i = 0; i < n-1; i++) {
			int exchg = 0;
			for(int j = n-1; j > i; j--) {
				if(a[j-1] > a[j]) {
					swap(a, j-1, j);
					exchg++;
				}
			}
			if(exchg == 0) break;
		}
	}
}
